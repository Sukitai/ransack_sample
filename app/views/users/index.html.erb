<h1>一覧表示</h1>
<%= form_with url: users_path, local: true do |form| %>
  <p>名前で検索:<%= form.text_field :search_name, {placeholder: "例)太郎"} %></p>
  <p>年齢で検索:<%= form.text_field :search_age, {placeholder: "例)20"} %></p>
  <p>
    男性:<%= form.radio_button :search_sex, 1, {checked: true} %> <%# enum の 番号を指定する。 :man を指定しない。%>
    女性:<%= form.radio_button :search_sex, 2 %>
  </p>

  <%= form.submit "検索" %>
<% end %>

<hr>

<table style="border-collapse: collapse;" >
  <caption>検索結果</caption>
  <thead>
    <tr>
      <th>お名前</th>
      <th>ご年齢</th>
      <th>性別</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each.with_index(1) do |user, i| %>
      <tr>
        <% if i.odd? %>
          <td style="background-color: #add8e6;" ><%= user.name %></td>
          <td style="background-color: #add8e6;" ><%= user.age %></td>
          <td style="background-color: #add8e6;" ><%= user.sex %></td>
        <% else %>
          <td><%= user.name %></td>
          <td><%= user.age %></td>
          <td><%= user.sex %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>